<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light theme -->
    <style name="Theme_LichessScheduler" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorControlHighlight">?attr/rippleColor</item>

        <item name="primaryColor">#FF5722</item>
        <item name="bgColor">#F9F9F9</item>
        <item name="objectBackgroundColor">#FFF</item>
        <item name="textColor">#000</item>
        <item name="textColorLight">#777</item>
        <item name="textColorColored">#FF5722</item>
        <item name="hintTextColor">#AAA</item>

        <item name="toolbarColor">#E6DDDDDD</item>
        <item name="spinnerBackground">#F0F0F0</item>
        <item name="spinnerMenuBackground">#F0F0F0</item>
        <item name="seekbarBackground">#BBB</item>
        <item name="iconColor">#FF5722</item>
        <item name="iconColorDark">#000</item>
        <item name="floatingActionButtonColor">#FF5722</item>
        <item name="overlayColorLight">#C0FFFFFF</item>
        <item name="rippleColor">#1F000000</item>
        
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryVariant">#E64A19</item>
        <item name="colorOnPrimary">#FFF</item>
        <!-- Accent color -->
        <item name="colorAccent">#FF5722</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#00000000</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- Dark theme -->
    <style name="ThemeDark_LichessScheduler" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorControlHighlight">?attr/rippleColor</item>

        <item name="primaryColor">#FF5722</item>
        <item name="bgColor">#222</item>
        <item name="objectBackgroundColor">#555</item>
        <item name="textColor">#FFF</item>
        <item name="textColorLight">#F0F0F0</item>
        <item name="textColorColored">#FFF</item>
        <item name="hintTextColor">#AAA</item>
        <item name="toolbarColor">#444</item>
        <item name="spinnerBackground">#33FFFFFF</item>
        <item name="spinnerMenuBackground">#555</item>
        <item name="seekbarBackground">#BBB</item>
        <item name="iconColor">#FFF</item>
        <item name="iconColorDark">#FFF</item>
        <item name="overlayColorLight">#C0555555</item>
        <item name="rippleColor">#1FFFFFFF</item>
        
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryVariant">#E64A19</item>
        <item name="colorOnPrimary">#FFF</item>
        <!-- Accent color -->
        <item name="colorAccent">#FF5722</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#222</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!-- Animation -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- Toolbar -->
    <style name="MainToolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorPrimary">?attr/textColor</item>
        <item name="android:textColorSecondary">?attr/textColor</item>
        <item name="actionMenuTextColor">?attr/textColor</item>
        <item name="colorControlHighlight">?attr/rippleColor</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation" tools:targetApi="n">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">?attr/toolbarColor</item>
    </style>
    <!-- Switch -->
    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Material.Button">
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <!-- Form elements -->
    <style name="FieldLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/textColorLight</item>
    </style>
    <style name="DayOfWeekLabel" parent="FieldLabel">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">?attr/hintTextColor</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>
    <style name="DropDownField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:popupBackground">?attr/spinnerMenuBackground</item>
    </style>
    <style name="TimeDropDownField" parent="DropDownField">
        <item name="android:layout_width">60dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="RangeInputField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:progressBackgroundTint">?attr/seekbarBackground</item>
    </style>
    <style name="SwitchField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:switchTextAppearance">@style/SwitchTextAppearance</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>
    <style name="CheckBoxField">
        <item name="buttonTint">?attr/primaryColor</item>
    </style>
</resources>